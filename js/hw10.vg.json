{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 550,
  "height": 350,
  "background": "transparent",

  "config": {"view": {"stroke": null}},
  "data": {
    "url": "https://raw.githubusercontent.com/KarenXia/fit3179/main/data/number-of-deaths-by-risk-factor.csv"
  },
  "params": [
    {
      "name": "Year_selection",
      "value": 2019,
      "bind": {
        "input": "range",
        "min": 1990,
        "max": 2019,
        "step": 1,
        "name": "Year Selection"
      }
    },
    {
      "name": "Death_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 30,
        "step": 5,
        "name": "Minimum Deat Rate: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "labels": [
          "Show All",
          "North America",
          "South America",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {
      "lookup": "Country",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/4_interactive_scatter_plot/data/COVID_19_10_Oct_2020.csv"
        },
        "key": "Country",
        "fields": ["Continent"]
      }
    },
    {"filter": "datum.High_systolic_blood_pressure>0"},
    {"filter": "datum.Obesity > 0"},
    {"filter": "datum.Death_rate > Death_Above"},
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    },
    {"filter": "Year_selection ==null||datum.Year == Year_selection"}
  ],
  "encoding": {
    "x": {
      "field": "High_systolic_blood_pressure",
      "type": "quantitative",
      "axis": {"tickCount": 7},
      "title": "High systolic blood pressure case",
      "scale": {"type": "log", "domain": [1, 10000000]}
    },
    "y": {
      "field": "Obesity",
      "type": "quantitative",
      "title": "Obesity case",
      "axis": {"tickCount": 6},
      "scale": {"type": "log", "domain": [1, 1000000]}
    }
  },
  "layer": [
    {
      "mark":{
        "type": "text",
        "color":"black",
        "fontSize":10,
        "text":"Obesity is a risk factor for several of  the worldâ€™s leading causes of death, abc including high blood pressure",
        "align":"left", 
        "lineBreak":"abc",    
        "fontStyle": "italic",
        "fontWeight":"lighter"
      },
      "encoding": {
        "x":{
          "datum":3,
          "type": "quantitative",
          "axis": {"grid": false, "ticks": false}        
        },
        "y":{
          "datum":700000,
          "type": "quantitative"
        }
      }
    },
    {
      "mark":{
        "type": "text",
        "color":"#a6cee3",
        "fontSize":10,
        "text":"Somalia: lowest rates of abc premature obesity death in 2019 ",
        "align":"left",
        "fontStyle": "italic",
        "fontWeight":"lighter",
        "lineBreak":"abc"
      },
      "encoding": {
        "x":{
          "datum": 15000,
          "type": "quantitative",
          "axis": {"grid": false, "ticks": false}        
        },
        "y":{
          "datum":2000,
          "type": "quantitative"
        }
      }
    },
    {
      "mark":{
        "type": "text",
        "color":"#a65628",
        "fontSize":10,
        "text":"Fiji: highest rates of abc premature obesity death in 2019 ",
        "align":"right",
        "fontStyle": "italic",
        "fontWeight":"lighter",
        "lineBreak":"abc"
      },
      "encoding": {
        "x":{
          "datum":500,
          "type": "quantitative",
          "axis": {"grid": false, "ticks": false}        
        },
        "y":{
          "datum":3000,
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {
        "type": "line",
        "color": "firebrick"
      },
      "transform": [
        {
          "regression": "Obesity",
          "on": "High_systolic_blood_pressure"
        }
      ],
      "encoding": {
        "x": {
          "field": "High_systolic_blood_pressure",
          "type": "quantitative"
        },
        "y": {
          "field": "Obesity",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "Death_rate",
          "type": "quantitative",
          "title": "Death Rate%",
          "scale": {
            "type": "threshold",
            "domain": [5, 10, 15, 20, 25],
            "range": [10, 50, 150, 200, 300, 400]
          }
        },
        "color": {
          "field": "Continent",
          "type": "nominal",
          "scale": {
            "domain": [
              "North America",
              "South America",
              "Europe",
              "Africa",
              "Asia",
              "Oceania"
            ],
            "range": [
              "#e41a1c",
              "#984ea3",
              "#ff7f00",
              "#a6cee3",
              "#377eb8",
              "#a65628"
            ]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "Obesity",
            "type": "quantitative",
            "format": ",",
            "title": "Obesity Case"
          },
          {
            "field": "High_systolic_blood_pressure",
            "type": "quantitative",
            "format": ",",
            "title": "High Blood Pressure Case"
          },
          {
            "field": "Death_rate",
            "type": "quantitative",
            "format": ".2f",
            "title": "Death Rate%"
          },
          {"field": "Year", "type": "quantitative"}
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Vietnam' || datum['Country'] == 'Australia' || datum['Country'] == 'Germany' || datum['Country'] == 'Fiji' || datum['Country'] == 'India' ||  datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "Obesity",
            "type": "quantitative",
            "format": ",",
            "title": "Obesity Case"
          },
          {
            "field": "High_systolic_blood_pressure",
            "type": "quantitative",
            "format": ",",
            "title": "High Blood Pressure Case"
          },
          {
            "field": "Death_rate",
            "type": "quantitative",
            "format": ".2f",
            "title": "Death Rate%"
          },
          {"field": "Year", "type": "quantitative"}
        ]
      }
    }
  ]
}